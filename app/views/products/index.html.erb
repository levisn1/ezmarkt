<div class="items-container">
  <% @products.each do |product| %>
  <% if product.ordinable%>
      <div class="menu-items">
        <%= product.name %><br>
        <%= product.tagline %><br>
        <%= product.description %><br>
        <%= product.price %><br>
        <%= link_to "Show Product", product_path(product) %>
      </div>
      <% end %>
    <% end %>
</div>
